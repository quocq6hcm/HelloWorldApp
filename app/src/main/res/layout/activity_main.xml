<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quocq.helloworldapp.MainActivity">

    <TextView
        android:id="@+id/txtHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Worlddddddddddddddddddd!"
        android:layout_x="120px"
        android:layout_y="100px"
        android:background="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="250px"
        android:layout_height="100px"
        android:onClick="doTest"
        android:text="Change Text"
        android:layout_x="10px"
        android:layout_y="300px"

         />

    <Button
        android:id="@+id/btn_vang"
        android:layout_width="200px"
        android:layout_height="100px"
        android:onClick="setBgYellow"
        android:text="Vàng"
        android:layout_x="10px"
        android:layout_y="400px"

        />

    <Button
        android:id="@+id/btn_font20"
        android:layout_width="220px"
        android:layout_height="100px"

        android:text="Set Font 20"
        android:layout_x="550px"
        android:layout_y="300px"
        />

    <Button
        android:id="@+id/btn_font40"
        android:layout_width="220px"
        android:layout_height="100px"

        android:text="Set Font 40"
        android:layout_x="280px"
        android:layout_y="300px"
        />

    <Button
        android:id="@+id/btn_do"
        android:layout_width="200px"
        android:layout_height="100px"
        android:onClick="setBgRed"
        android:text="Đỏ"
        android:layout_x="570px"
        android:layout_y="400px"
        />


    <Button
        android:id="@+id/btn_xanh"
        android:layout_width="200px"
        android:layout_height="100px"
        android:onClick="setBgBlue"
        android:text="Xanh"
        android:layout_x="300px"
        android:layout_y="400px"
        />

    <Button
        android:id="@+id/btnClickMe"
        android:layout_width="200px"
        android:layout_height="100px"

        android:text="Click Me"
        android:layout_x="110px"
        android:layout_y="550px"
        />
    <TextView
        android:id="@+id/txtClickMe"
        android:layout_width="400px"
        android:layout_height="90px"
        android:text="Đã click: 0 lần!"
        android:layout_x="120px"
        android:layout_y="650px"

        />
    <Button
        android:id="@+id/buttonToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Toast" />
</AbsoluteLayout>
